# Docker Infrastructure Configuration
# Environment variables for flight-booking-system Docker services

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=flight_booking
POSTGRES_USER=flight_user
POSTGRES_PASSWORD=flight_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380

# Kafka Configuration
KAFKA_HOST=localhost
KAFKA_PORT=9093
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2182

# Kafka Internal Configuration
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1

# Network Configuration
DOCKER_NETWORK_NAME=flight-booking-network

# Volume Configuration
POSTGRES_VOLUME=postgres_data
REDIS_VOLUME=redis_data